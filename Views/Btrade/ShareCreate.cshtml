@model BrokerTradeViewModel

@{
    ViewData["Title"] = "Stocks Page";
}

<h1>ShareCreate</h1>

<form enctype="multipart/form-data" asp-controller="Btrade" asp-action="ShareCreate" method="post" class="mt-3">
<div class="bg-light border border-black col-sm-12">
    <h2 class="text-success font-weight-bold">@ViewBag.Title</h2>
    <hr />

    <div class="form-group row">
        <label asp-for="tradeinformation.brokerid" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="tradeinformation.brokerid" class="form-control" asp-items=" ViewBag.brokerlist">
                <option value="">Please select Broker</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="tradeinformation.Stockname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="tradeinformation.Stockname" class="form-control" placeholder="Enter Name" />
            @*<span asp-validation-for="tradeinformation.Stockname" class="text-danger"></span>*@
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="tradeinformation.Stockbuykprice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="tradeinformation.Stockbuykprice" class="form-control" placeholder="Enter Name" />
            @*<span asp-validation-for="tradeinformation.Stockbuykprice" class="text-danger"></span>*@
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="tradeinformation.Stocksellprice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="tradeinformation.Stocksellprice" class="form-control" placeholder="Enter Stocks Sell Price" />
            @*<span asp-validation-for="tradeinformation.Stocksellprice" class="text-danger"></span>*@
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="tradeinformation.Stocktotalshares" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="tradeinformation.Stocktotalshares" class="form-control" placeholder="Enter Total Stocks" />
            @*<span asp-validation-for="tradeinformation.Stocktotalshares" class="text-danger"></span>*@
        </div>
    </div>



    <div class="form-group row">
        <label asp-for="tradeinformation.Stockpurchaseddate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="datetime-local" asp-for="tradeinformation.Stockpurchaseddate" class="form-control" placeholder="Enter Purchase Date" />
            @*<span asp-validation-for="tradeinformation.Stockpurchaseddate" class="text-danger"></span>*@
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="tradeinformation.Stockselldate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="datetime-local" asp-for="tradeinformation.Stockselldate" class="form-control" placeholder="Enter Sell Date" />
            @*<span asp-validation-for="tradeinformation.Stockselldate" class="text-danger"></span>*@
        </div>
    </div>



    @*<div asp-validation-summary="All" class="text-danger" id="allvalidate"></div>*@

    <div class="form-group row">
        <div class="col-sm-10">
            <button id="btncreatesubmit" type="submit" class="btn btn-success">Add</button>
        </div>
    </div>

</div>

    </form>
