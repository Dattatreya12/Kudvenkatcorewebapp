@model IEnumerable<Tradeinformation>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<p><a asp-action="ShareCreate" asp-controller="Btrade" class="btn btn-sm btn-success m-1">Create New Stock</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Stockname</th>
            <th>Stockbuykprice</th>
            <th>Stocksellprice</th>
            <th>Stocktotalshares</th>
            <th>Stock purchased date</th>
            <th>Stock sell date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(m => item.Stockname)</td>
            <td>@Html.DisplayFor(m => item.Stockbuykprice)</td>
            <td>@Html.DisplayFor(m => item.Stocksellprice)</td>
            <td>@Html.DisplayFor(m => item.Stocktotalshares)</td>
            <td>@Html.DisplayFor(m => item.Stockpurchaseddate)</td>
            <td>@Html.DisplayFor(m => item.Stockselldate)</td>
            <td>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">EDIT</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-info">DELETE</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>