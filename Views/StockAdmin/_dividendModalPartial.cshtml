@model Dividend_info

<div class="modal fade" id="addDividend">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addEmployeeLabel">Add dividend</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="Create">
                    <div class="form-group">
                        <label>Select Stock</label>
                        <input asp-for="stockid" class="form-control" />
                        <span asp-validation-for="stockid" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Dividend Amountk</label>
                        <input asp-for="dividendAmount" class="form-control" />
                        <span asp-validation-for="dividendAmount" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Year</label>
                        <input asp-for="year" class="form-control" />
                        <span asp-validation-for="year" class="text-danger"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">close</button>
                <button type="button" class="btn btn-danger" data-save="modal">Save</button>
            </div>

        </div>
    </div>
</div>