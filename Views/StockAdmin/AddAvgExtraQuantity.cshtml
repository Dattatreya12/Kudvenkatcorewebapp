            <label asp-for="brokerid" class="control-label"></label>
            <select asp-for="brokerid" class ="form-control" asp-items="ViewBag.brokerid"></select>
        </div>
        <div class="form-group">
            <label asp-for="stockid" class="control-label"></label>
            <input asp-for="stockid" class="form-control" />
            <span asp-validation-for="stockid" class="text-danger"></span>
        </div>*@
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>


</div>

