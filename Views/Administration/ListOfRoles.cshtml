@model IEnumerable<IdentityRole>

@{
    ViewBag.RoleTitle = "List of Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary" asp-controller="Administration" asp-action="CreateRole" style="width:auto">Create Role</a>
    <br />
    foreach(var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role ID:@role.Id
            </div>

            <div class="card-body">
                <h5 class="card-title"> Role Name:@role.Name</h5>
               
            </div>

            <div class="card-footer">
                <a class="btn btn-dark" asp-action="EdirRoleAction" asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-danger" asp-action="" asp-controller="">Delete</a>
            </div>

        </div>
    }
}
else
{
    <div class="card">

        <div class="card-header">
            No Roles Created Yet
        </div>

        <div class="card-body">
            <h5 class="card-title">
                use the below button to create role
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">Create Role</a>
        </div>
    </div>
}