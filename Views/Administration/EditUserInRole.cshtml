@model List<UserRoleViewModel>
@{
    var roleId = ViewBag.roleid;
}

<h1>EditUserInRole</h1>

<form  method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add | Remove UserRole</h2>
        </div>
        <div class="card-body">
            @for(int i=0; i<Model.Count;i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
                </div>
            }
        </div>

        <div class="card-footer">
           <input type="submit" value="Update" class="btn btn-success" style="width:auto" />
            <a asp-action="EdirRoleAction" asp-route-id="@roleId" class="btn btn-danger" style="width:auto">Cancel</a>
        </div>
    </div>
</form>

