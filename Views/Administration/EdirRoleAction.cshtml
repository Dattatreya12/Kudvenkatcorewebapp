@model EditRoleViewModel
@{
    ViewData["Title"] = "EdirRoleAction";
}

<h1>Edit Role</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-10">
            <input asp-for="RoleName"  class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success">Update</button>
            <a asp-action="ListOfRoles" class="btn btn-danger">Cancel</a>
        </div>
    </div>

    @*List of user add to role*@

    <div class="card mb-3">
        <div class="card-header">
            <h3>User in this Role</h3>
        </div>

        <div class="card-body">
            @if(Model.Users.Any())
            {
                foreach(var user in Model.Users)
                {
                    <h4 class="card-title">@user</h4>
                }
            }
            else
            {
                <h4 class="card-title">No User at the Moment</h4>
            }
        </div>

        <div class="card-footer">
            <a asp-action="EditUserInRole" asp-controller="Administration" class="btn btn-primary" asp-route-roleId="@Model.Id" style="width:auto">Add User | Remove User</a>
           
        </div>

    </div>
</form>

