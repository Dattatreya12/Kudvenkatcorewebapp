<div class="container ">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-4 rounded-lg mt-5">
                <form method="post">
                    <div class="card-header"><h3 class="text-center font-weight-bold my-4">Login</h3></div>
                    <div class="card-body">

                        <div class="form-outline form-white mb-4">
                            <label class="form-label" for="typeEmailX">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" id="typeEmailX" />
                            <span asp-validation-for="Email" class="text-primary form-label" for="typeEmailX"></span>
                        </div>

                        <div class="form-outline form-white mb-4">
                            <label class="form-label" for="typePasswordX">Password</label>
                            <input asp-for="Password" type="password" id="typePasswordX" class="form-control form-control-lg" />
                            <span asp-validation-for="Password" class="text-primary form-label" for="typePasswordX"></span>
                        </div>

                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" href="password.html">Forgot Password?</a>
                            <button class="btn btn-outline-primary btn-lg px-5" type="submit">Login</button>
                        </div>

                    </div>
                </form>
                <div class="card-footer text-center py-3">
                    <div class="small"><a href="register.html">Need an account? Contact Admin!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>