                                    <span asp-validation-for="Email" class="text-primary form-label" for="typeEmailX"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Password" type="password" id="typePasswordX" class="form-control form-control-sm" />
                                    @*<label class="form-label" for="typePasswordX">Password</label>*@
                                    <span asp-validation-for="Password" class="text-primary form-label" for="typePasswordX"></span>
                                </div>

                                <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>

                            </div>
                        </div>

