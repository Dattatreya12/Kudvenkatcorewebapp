@model HomeDetailsViewModel
@inject SignInManager<ApplicationUser> _signInManager;

@{
    ViewData["Title"] = "Employee Details Page";
    var photoPath = "~/Images/" + (Model.employee.PhotoPath ?? "noimage.jpg");
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    @*<h3>@ViewData["PageTitle"]</h3>*@

    @*@{
            var employee = ViewData["Employee"] as Kudvenkatcorewebapp.Models.Employee;

        }*@


    @*View Bag*@
    @*<div>
            Name:@employee.Name
        </div>
        <div>
            Email:@employee.Email
        </div>
        <div>
            Department:@employee.Department
        </div>*@

    @*View Bag*@
    @*<div>
            Name:@ViewBag.Employee.Name
        </div>
        <div>
            Email:@ViewBag.Employee.Email
        </div>
        <div>
            Department:@ViewBag.Employee.Department
        </div>*@


    <h4 class="text-success font-weight-bold col-sm-12">@ViewData["Title"]</h4>
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card bg-light">
                <div class="card-header">
                    <h1>@Model.employee.Name</h1>
                </div>

                @*Middle content*@
                <div class="card-body text-center">
                    <img class="card-img-top imageThumbnail" src=@photoPath asp-append-version="true" />
                    <table class="col-12">

                        <tr>
                            <td> <h4>Employee Id:</h4></td>
                            <td><h4> <b>@Model.employee.Id</b></h4></td>
                        </tr>

                        <tr>
                            <td> <h4>Employee Email:</h4></td>
                            <td><h4> <b>@Model.employee.Email</b></h4></td>
                        </tr>

                        <tr>
                            <td> <h4>Employee Department:</h4></td>
                            <td><h4> <b>@Model.employee.Department</b></h4></td>
                        </tr>
                    </table>
                </div>

                @*footer content*@

                @if (_signInManager.IsSignedIn(User) && (User.IsInRole("Admin")))
                {
                    <div class="card-footer text-center">
                        <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                        <a asp-action="Editemployee" asp-controller="home" asp-route-id="@Model.employee.Id" class="btn btn-primary m-1">Edit</a>
                        <a href="#" class="btn btn-danger m-1">Delete</a>
                    </div>
                }
                else
                {
                    <div class="card-footer text-center">
                        <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                    </div>
                }

            </div>
        </div>
    </div>



    @section Scripts{
        <script src="~/js/CustomScript.js"></script>
    }
</body>
</html>



