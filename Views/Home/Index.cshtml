@model IEnumerable<Employee>
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> _signInManager;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="text-capitalize text-center">Welcome</h1>
</div>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    @*<h4> @ViewData["Title"]</h4>*@
  
    <div class="container">
        <div class="row">

            @foreach (var employee in Model)
            {
                var photoPath = "~/Images/" + (employee.PhotoPath ?? "noimage.jpg");
                <div class="bg-light col-md-4">
                    <div class="card mb-4 shadow-sm">

                       

                        <div class="card-body">
                            <div class="card-header">
                                <h4>@(employee.InitialName + " " + employee.Name)</h4>
                                <h6>@employee.TotalInvestedAmount</h6>
                            </div>

                            <img class="card-img-top imageThumbnail" src=@photoPath asp-append-version="true" />
                            <div class="card-footer text-center">
                                <partial name="_TableEditDeleteView" model="employee.Id">
                            </div>

                        </div>
                        </div>
                    </div>
               
            }
        </div>
    </div>

</body>
</html>
