@model IEnumerable<Kudvenkatcorewebapp.Models.Employee>

@{
    ViewData["Title"] = "AllEmployee";
}

@if (ViewBag.emailsentmessege != null)
{
    <div class="bg-success">
        <label><b>Total member</b> : @ViewBag.emailsentmessege</label>
    </div>
}

<table class="table table-active table-bordered">
    <thead>
        <tr class="bg-light">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @*@Html.DisplayNameFor(model => model.PhotoPath)*@
                Photo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TotalInvestedAmount)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var photoPath = "~/Images/" + (item.PhotoPath ?? "noimage.jpg");
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    <img class="card-img-top imageThumbnail" src=@photoPath asp-append-version="true" />
                    @*@Html.DisplayFor(modelItem => item.PhotoPath)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TotalInvestedAmount)
                </td>

            </tr>
        }
    </tbody>
</table>
