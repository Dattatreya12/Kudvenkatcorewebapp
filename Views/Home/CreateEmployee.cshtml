@model EmployeeViewModel
@{
    ViewBag.Title = "Create Employee Data";
}

    <form enctype="multipart/form-data" asp-controller="home" asp-action="CreateEmployee" method="post" class="mt-3">
        <div class="bg-light border border-black col-sm-12">
            <h2 class="text-success font-weight-bold">@ViewBag.Title</h2>
            <hr />

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" placeholder="Enter Name" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Gender" class="form-control" placeholder="Enter Gender" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Department" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" class="custom-select mr-sm-2">
                       
                        <option value="">please select</option>
                    </select>
                    <span asp-validation-for="Department " class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-8">
                    <input multiple asp-for="Photo" class="form-control custom-file-input" />
                    <label class="custom-file-label">Choose File.....</label>
                </div>
            </div>



            <div asp-validation-summary="All" class="text-danger" id="allvalidate"></div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button id="btncreatesubmit" type="submit" class="btn btn-success">Add</button>
                </div>
            </div>

        </div>

       

        @section Scripts
        {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });

                    $("input").focus(function () {
                        $("input").css("border-color", "black");
                    });
                    $("select").focus(function () {
                        $("input").css("border-color", "black");
                    });

                   
                });
            </script>
        }
    </form>