@if (_signInManager.IsSignedIn(User) && (User.IsInRole("Admin")))
{
    <div class="card-footer text-center">
        @*<a href="/home/details/@employee.Id" class="btn btn-primary">View </a>*@
        <a asp-controller="home" asp-action="details" asp-route-id="@Model" class="btn btn-primary">View</a>
        <a asp-action="Editemployee" asp-controller="home" asp-route-id="@Model" class="btn btn-primary m-1">Edit</a>
        <a href="#" class="btn btn-danger  m-1">Delete</a>
    </div>
}
else
{
    @*<div class="card-footer text-center">*@
        <a asp-controller="home" asp-action="details" asp-route-id="@Model" class="btn btn-primary">View</a>
    @*</div>*@
}