@model LoanEmployees
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
    <form enctype="multipart/form-data" asp-controller="LoanModule" asp-action="Create" method="post" class="mt-3">
        <div class="bg-light border border-black col-sm-12">
            <h2 class="text-success font-weight-bold">@ViewBag.Title</h2>
            <hr />

            <div class="form-group row">
                <label asp-for="EmployeeId" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="EmployeeId" class="form-control" asp-items=" ViewBag.loanemployee">
                        <option value="">Please select Broker</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="LoanID" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="LoanID" class="form-control" placeholder="Enter Name" />
                    @*<span asp-validation-for="tradeinformation.Stockname" class="text-danger"></span>*@
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="TotalLoanAmount" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="TotalLoanAmount" class="form-control" placeholder="Enter Name" />
                    @*<span asp-validation-for="tradeinformation.Stockbuykprice" class="text-danger"></span>*@
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="TotalEmi" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="TotalEmi" class="form-control" placeholder="Enter Stocks Sell Price" />
                    @*<span asp-validation-for="tradeinformation.Stocksellprice" class="text-danger"></span>*@
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="LoanDate" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="datetime-local" asp-for="LoanDate" class="form-control" placeholder="Enter Loan Date" />
                    @*<span asp-validation-for="tradeinformation.Stocktotalshares" class="text-danger"></span>*@
                </div>
            </div>

            <div class="form-group">
                @if (ViewBag.Name == "Add")
                {
                    <input type="submit" value="Add" asp-action="Create" class="btn btn-success btn-sm" />
                }
                else
                {
                    <input type="submit" value="Update" asp-action="Update" class="btn btn-success btn-sm" />
                    <input type="submit" value="Cancel" asp-action="Index" class="btn btn-defaul btn-sm" />
                }
            </div>

        </div>
    </form>