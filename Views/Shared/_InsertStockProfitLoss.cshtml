<form enctype="multipart/form-data" asp-controller="StockAdmin" asp-action="Create" method="post" class="mt-3">
    <div class="bg-light border border-black col-sm-12">
        <h2 class="text-success font-weight-bold">@ViewBag.Title</h2>
        <hr />


        <div class="form-group row">
            <label asp-for="Profit" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Profit" class="form-control" placeholder="Enter Name" />
                <span asp-validation-for="Profit" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <label asp-for="Loss" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Loss" class="form-control" placeholder="Enter Stocks Sell Price" />
                <span asp-validation-for="Loss" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <label asp-for="Year" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Year" class="form-control" placeholder="Enter Stocks Sell Price" />
               
                @*<span asp-validation-for="tradeinformation.Stocktotalshares" class="text-danger"></span>*@
            </div>
        </div>

        <div class="form-group">
            @if (ViewBag.Name == "Add")
            {
                <input type="submit" value="Add" asp-action="Create" class="btn btn-success btn-sm" />
            }
            else
            {
                <input type="submit" value="Update" asp-action="Update" class="btn btn-success btn-sm" />
                <input type="submit" value="Cancel" asp-action="Index" class="btn btn-defaul btn-sm" />
            }
        </div>

    </div>
    </form>